<% if view_link(event) %>
  <div class="event-link">
    <%= link_to 'Edit', edit_event_path(event) %>
  </div>
  <div class="event-link">
    <%= link_to 'Delete', event, :method => :delete %>
  </div>
  <div class="event-link">
    <%= link_to 'Add to Google Calendar', calendars_path(:event_id => event.id), :method => :post %>
  </div>
<% end %>